<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="hr_penality_view_tree" model="ir.ui.view">
    <field name="name">hr.penality.view.tree</field>
    <field name="model">hr.penality</field>
    <field name="arch" type="xml">
      <tree string="Penality">
          <field name="employee_id"/>
          <field name="date"/>
          <field name="check_in_date"/>
          <field name="penality_hours"/>
      </tree>
    </field>
  </record>

  <record id="hr_penality_action" model="ir.actions.act_window">
    <field name="name">Penality</field>
    <field name="res_model">hr.penality</field>
    <field name="view_mode">tree,form</field>
    <field name="context">
        {
            "group_by": ["date:month","employee_id"]
        }
    </field>
  </record>

  <menuitem
        id="model_name_menu"
        name="Penalities"
        action="hr_penality_action"
        parent="hr_attendance.menu_hr_attendance_root"
        sequence="10"    
  />





  <record id="attendance_conf_view_tree" model="ir.ui.view">
    <field name="name">attendance.conf.view.tree</field>
    <field name="model">attendance.conf</field>
    <field name="arch" type="xml">
      <tree string="Penality" editable="bottom" create="0">
          <field name="check_in_hour"/>
          <field name="maximum_check_in_hour"/>
      </tree>
    </field>
  </record>

  <record id="attendance_conf_action" model="ir.actions.act_window">
    <field name="name">Attendance Config</field>
    <field name="res_model">attendance.conf</field>
    <field name="view_mode">tree</field>
  </record>

  <menuitem
        id="attendance_conf_menu"
        name="Attendance Configuration"
        action="attendance_conf_action"
        parent="hr_attendance.menu_hr_attendance_root"
        sequence="10"    
  />




  <record id="ip_conf_view_tree" model="ir.ui.view">
    <field name="name">ip.conf.view.tree</field>
    <field name="model">ip.conf</field>
    <field name="arch" type="xml">
      <tree string="IP Conf" editable="bottom">
          <field name="ip"/>
      </tree>
    </field>
  </record>

  <record id="ip_conf_action" model="ir.actions.act_window">
    <field name="name">IP Config</field>
    <field name="res_model">ip.conf</field>
    <field name="view_mode">tree</field>
  </record>

  <menuitem
        id="ip_conf_menu"
        name="IP Configuration"
        action="ip_conf_action"
        parent="hr_attendance.menu_hr_attendance_root"
        sequence="10"    
  />


</odoo>
