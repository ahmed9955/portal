<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_hr_employee" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="linkedin" />
                <field name="employement_type_id"/>
                <field name="seniority_level"></field>
                <field name="attendance_type"></field>
                <field name="work_from_home_days"></field>
            </xpath>
            <xpath expr="//page[@name='hr_settings']/group/group[@name='active_group']/field[@name='user_id']" position="attributes">
                <attribute name="domain">[('company_ids', 'in', company_id)]</attribute>
            </xpath>
        </field>
    </record>


    <record id="inherit_hr_res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.view.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_create_employee']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('id', '=', False),('employee_id', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
